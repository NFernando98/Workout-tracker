{
  "version": 2,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/backend/api/$1" },
    { "source": "/(.*)", "destination": "/frontend/$1" }
  ],
  "builds": [
    {
      "src": "/frontend",
      "use": "@vercel/static-build"
    },
    {
      "src": "/backend/api/server.ts",
      "use": "@vercel/node"
    }
  ]
}